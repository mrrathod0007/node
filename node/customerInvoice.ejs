    <style>
        body {
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            padding: 10px;
            margin-top: auto;

        }

        .topbar {
            background-color: var(--bg-color);
            padding: 10px;
        }

        .send-bill-logo {
            width: 110px;
        }

        .addres-text {
            font-size: 18px;
        }

        h1 {
            letter-spacing: 5px;
            font-size: 45px;
            color: #343434;
        }

        .address-text {
            width: 33%;
        }

        .main-add {
            font-size: 18px;
        }

